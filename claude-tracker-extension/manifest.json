{
  "manifest_version": 3,
  "name": "Claude VPS Conversation Tracker",
  "version": "1.0.0",
  "description": "Automatically tracks Claude conversations and logs token usage",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
