<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voice Activity - Discord Logger</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container">
        <h1>üîä Voice Activity Log</h1>
        
        <div class="filter-box">
            <label>Action Type:</label>
            <select onchange="window.location='?type=' + this.value">
                <option value="all" <%= actionType === 'all' ? 'selected' : '' %>>All Actions</option>
                <option value="join" <%= actionType === 'join' ? 'selected' : '' %>>Joins</option>
                <option value="leave" <%= actionType === 'leave' ? 'selected' : '' %>>Leaves</option>
                <option value="switch" <%= actionType === 'switch' ? 'selected' : '' %>>Channel Switches</option>
            </select>
        </div>
        
        <p class="result-count">Found <%= events.length %> events</p>
        
        <div class="voice-events">
            <% events.forEach(event => { %>
                <div class="voice-event <%= event.actionType %>">
                    <div class="voice-header">
                        <span class="voice-type"><%= event.actionType.toUpperCase() %></span>
                        <span class="voice-user">
                            <a href="/user/<%= event.userId %>"><%= event.userName %></a>
                        </span>
                        <span class="voice-time"><%= new Date(event.timestamp).toLocaleString() %></span>
                    </div>
                    <div class="voice-details">
                        <% if (event.actionType === 'switch') { %>
                            <p>From: <strong><%= event.oldChannelName %></strong> ‚Üí To: <strong><%= event.newChannelName %></strong></p>
                        <% } else { %>
                            <p>Channel: <strong><%= event.channelName %></strong></p>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?type=<%= actionType %>&page=<%= currentPage - 1 %>" class="btn">‚Üê Previous</a>
            <% } %>
            <span>Page <%= currentPage %> of <%= totalPages %></span>
            <% if (currentPage < totalPages) { %>
                <a href="?type=<%= actionType %>&page=<%= currentPage + 1 %>" class="btn">Next ‚Üí</a>
            <% } %>
        </div>
    </div>
</body>
</html>