        <div class="appeals-table">
            <div class="table-header">
                <span>User</span>
                <span>Reason</span>
                <span>Type</span>
                <span>Status</span>
                <span>Submitted</span>
                <span>Actions</span>
            </div>

            <% if (appeals.length === 0) { %>
                <div class="empty-state">
                    <div class="empty-state-icon">📭</div>
                    <h3>No Appeals Found</h3>
                    <p>There are no appeals matching your current filter.</p>
                </div>
