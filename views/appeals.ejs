                        <div data-label="Status">
                            <span class="status-badge <%= appeal.status %>">
                                <%= appeal.status %>
                            </span>
                        </div>
                        
                        <div class="appeal-date" data-label="Submitted">
                            <%= new Date(appeal.appeal.submittedAt).toLocaleDateString() %>
                        </div>
                        
                        <div data-label="Actions">
                            <a href="/appeals/<%= appeal._id %>" style="color: #5865f2; text-decoration: none; font-weight: 600;">
                                View →
                            </a>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="/appeals?status=<%= status %>&page=<%= currentPage - 1 %>">← Previous</a>
                <% } %>
                
                <span class="current">Page <%= currentPage %> of <%= totalPages %></span>
                
                <% if (currentPage < totalPages) { %>
                    <a href="/appeals?status=<%= status %>&page=<%= currentPage + 1 %>">Next →</a>
                <% } %>
            </div>
        <% } %>
    </div>
</body>
</html>