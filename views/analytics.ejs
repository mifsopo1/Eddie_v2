            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #5865f2, #7289da);
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

        .data-table thead {
            border-bottom: 2px solid rgba(88, 101, 242, 0.3);
        }

        .data-table th {
            padding: 1rem;
            text-align: left;
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
        }

        .data-table td {
            padding: 1rem;
            color: #fff;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .data-table tr:hover {
            background: rgba(88, 101, 242, 0.1);
        }

        .data-table code {
            background: rgba(88, 101, 242, 0.2);
            color: #5865f2;
            padding: 0.25rem 0.5rem;
            border-radius: 4px;
            font-family: 'Courier New', monospace;
        }

        /* File Types & Uploaders */
        .file-types, .top-uploaders {
            display: flex;
            flex-direction: column;
            gap: 0.75rem;
            margin-top: 1rem;
        }

        .file-type-item, .uploader-item {
            background: rgba(0, 0, 0, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 1rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
            transition: all 0.3s ease;
        }

        .file-type-item:hover, .uploader-item:hover {
            background: rgba(88, 101, 242, 0.1);
            border-color: rgba(88, 101, 242, 0.3);
        }

        .file-type-name, .uploader-name {
            color: #fff;
            font-weight: 600;
            flex: 1;
        }

        .uploader-name {
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .uploader-name:hover {
            color: #5865f2;
        }

        .file-type-count, .file-type-size, .uploader-count, .uploader-size {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.85rem;
        }

        .uploader-rank {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: rgba(88, 101, 242, 0.2);
            color: #5865f2;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.85rem;
        }

        /* New Accounts */
        .new-accounts-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .new-account-item {
            background: linear-gradient(135deg, rgba(237, 66, 69, 0.1) 0%, rgba(30, 33, 40, 0.95) 100%);
            border: 1px solid rgba(237, 66, 69, 0.3);
            border-radius: 12px;
            padding: 1.25rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
            transition: all 0.3s ease;
        }

        .new-account-item:hover {
            border-color: rgba(237, 66, 69, 0.5);
            box-shadow: 0 4px 20px rgba(237, 66, 69, 0.2);
        }

        .account-info a {
            color: #fff;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .account-info a:hover {
            color: #5865f2;
        }

        .account-age {
            color: #ed4245;
            font-size: 0.85rem;
            margin-left: 0.5rem;
        }

        .join-info {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
            gap: 0.25rem;
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.6);
        }

        h3 {
            color: #fff;
            font-size: 1.1rem;
            margin: 2rem 0 1rem 0;
        }

        @media (max-width: 768px) {
            .stats-grid {
                grid-template-columns: 1fr;
            }

            .stat-card {
                flex-direction: column;
                text-align: center;
            }

            .leaderboard-item {
                flex-wrap: wrap;
            }

            .new-account-item {
                flex-direction: column;
                align-items: flex-start;
            }

            .join-info {
                align-items: flex-start;
            }
        }
    </style>
</head>
