                <div class="stat-info">
                    <div class="stat-value <%= analytics.members?.netGrowth7d >= 0 ? 'positive' : 'negative' %>">
                        <%= analytics.members?.netGrowth7d >= 0 ? '+' : '' %><%= analytics.members?.netGrowth7d || 0 %>
                    </div>
                    <div class="stat-label">Member Growth (7d)</div>
                    <div class="stat-change">
                        <%= analytics.members?.joins7d || 0 %> joins | 
                        <%= analytics.members?.leaves7d || 0 %> leaves
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Message Timeline Chart -->
        <div class="chart-container">
            <h2>📈 Message Activity (14 Days)</h2>
            <canvas id="messageChart"></canvas>
        </div>
        
        <!-- Top Users Leaderboard -->
        <div class="section-header">
            <h2>🏆 Top Users (Last 7 Days)</h2>
        </div>
        <div class="leaderboard">
            <% topUsers.forEach((user, index) => { %>
                <div class="leaderboard-item rank-<%= index + 1 %>">
                    <div class="rank-badge">#<%= index + 1 %></div>
                    <% if (user.userAvatar) { %>
                        <img src="<%= user.userAvatar %>" alt="<%= user.userName %>" class="leaderboard-avatar">
                    <% } %>
                    <div class="leaderboard-info">
                        <a href="/user/<%= user.userId %>" class="leaderboard-name"><%= user.userName %></a>
                        <div class="leaderboard-stats">
                            <span><%= user.messageCount %> messages
                                </span>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <!-- Top Channels -->
        <div class="section-header" style="margin-top: 2rem;">
            <h2>📺 Most Active Channels (Last 7 Days)</h2>
        </div>
        <div class="channels-grid">
            <% if (analytics.channels?.topChannels) { %>
                <% analytics.channels.topChannels.forEach(channel => { %>
                    <div class="channel-card">
                        <div class="channel-name">#<%= channel.channelName %></div>
                        <div class="channel-count"><%= channel.count.toLocaleString() %> messages</div>
                        <div class="channel-bar" style="width: <%= (channel.count / analytics.channels.topChannels[0].count * 100) %>%"></div>
                    </div>
                <% }); %>
            <% } %>
        </div>
        
        <!-- Invite Stats -->
        <div class="section-header" style="margin-top: 2rem;">
            <h2>🎫 Top Invite Codes</h2>
        </div>
        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Inviter</th>
                        <th>Uses</th>
                        <th>Recent Joins</th>
                    </tr>
                </thead>
                <tbody>
                    <% inviteStats.forEach(invite => { %>
                        <tr>
                            <td><code><%= invite._id %></code></td>
                            <td><%= invite.inviter %></td>
                            <td><strong><%= invite.uses %></strong></td>
                            <td>
                                <% if (invite.members && invite.members.length > 0) { %>
                                    <%= invite.members.slice(-3).map(m => m.name).join(', ') %>
                                <% } else { %>
                                    -
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        
        <!-- Attachment Stats -->
        <% if (attachmentStats && attachmentStats.byType) { %> 
            <div class="chart-container">
                <h3>File Types</h3>
                <div class="file-types">
                    <% attachmentStats.byType.forEach(type => { %>
                        <div class="file-type-item">
                            <span class="file-type-name"><%= type._id || 'Unknown' %></span>
                            <span class="file-type-count"><%= type.count.toLocaleString() %> files</span>
                            <span class="file-type-size"><%= (type.totalSize / 1024 / 1024).toFixed(2) %> MB</span>
                        </div>
                    <% }); %>
                </div>
                
                <h3>Top Uploaders</h3>
                <div class="top-uploaders">
                    <% attachmentStats.topUploaders.forEach((uploader, index) => { %>
                        <div class="uploader-item">
                            <span class="uploader-rank">#<%= index + 1 %></span>
                            <a href="/user/<%= uploader._id %>" class="uploader-name"><%= uploader.userName %></a>
                            <span class="uploader-count"><%= uploader.count %> files</span>
                            <span class="uploader-size"><%= (uploader.totalSize / 1024 / 1024).toFixed(2) %> MB</span>
                        </div>
                    <% }); %>
                </div>
            </div>
        <% } %>
        
        <!-- New Account Joins -->
        <% if (newAccounts && newAccounts.length > 0) { %>
            <div class="section-header" style="margin-top: 2rem;">
                <h2>⚠️ New Account Joins (< 7 days old)</h2>
            </div>
            <div class="new-accounts-list">
                <% newAccounts.forEach(join => { %>
                    <div class="new-account-item">
                        <div class="account-info">
                            <a href="/user/<%= join.userId %>"><%= join.userName %></a>
                            <span class="account-age">Account: <%= join.accountAgeDays %> days old</span>
                        </div>
                        <div class="join-info">
                            <% if (join.inviteData) { %>
                                <span>Invited by: <%= join.inviteData.inviter %></span>
                            <% } %>
                            <span>Joined: <%= new Date(join.timestamp).toLocaleString() %></span>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
        
    </div>
    
    <script>
        // Message Timeline Chart
        const ctx = document.getElementById('messageChart').getContext('2d');
        const timeline = <%- JSON.stringify(timeline) %>;
        
        new Chart(ctx, {
            type: 'line',
            data: {
                labels: timeline.map(t => t._id),
                datasets: [{
                    label: 'Messages',
                    data: timeline.map(t => t.count),
                    borderColor: '#5865f2',
                    backgroundColor: 'rgba(88, 101, 242, 0.1)',
                    tension: 0.4,
                    fill: true,
                    borderWidth: 3,
                    pointBackgroundColor: '#5865f2',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 4,
                    pointHoverRadius: 6
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        labels: { 
                            color: '#e0e0e0',
                            font: {
                                size: 14,
                                weight: '600'
                            }
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(30, 33, 40, 0.95)',
                        titleColor: '#fff',
                        bodyColor: '#e0e0e0',
                        borderColor: 'rgba(88, 101, 242, 0.5)',
                        borderWidth: 1,
                        padding: 12,
                        displayColors: false,
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y.toLocaleString() + ' messages';
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: { 
                            color: '#e0e0e0',
                            font: {
                                size: 12
                            },
                            callback: function(value) {
                                return value.toLocaleString();
                            }
                        },
                        grid: { 
                            color: 'rgba(255, 255, 255, 0.05)',
                            drawBorder: false
                        }
                    },
                    x: {
                        ticks: { 
                            color: '#e0e0e0',
                            font: {
                                size: 12
                            }
                        },
                        grid: { 
                            color: 'rgba(255, 255, 255, 0.05)',
                            drawBorder: false
                        }
                    }
                },
                interaction: {
                    intersect: false,
                    mode: 'index'
                }
            }
        });
    </script>
</body>
</html>