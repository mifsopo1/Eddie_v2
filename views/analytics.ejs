            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .stat-card {
            background: linear-gradient(135deg, rgba(30, 33, 40, 0.95) 0%, rgba(20, 23, 28, 0.95) 100%);
            border: 1px solid rgba(88, 101, 242, 0.3);
            border-radius: 12px;
            padding: 1.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #5865f2, #7289da);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .stat-card:hover::before {
            opacity: 1;
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(88, 101, 242, 0.3);
            border-color: rgba(88, 101, 242, 0.6);
        }

        .stat-icon {
            font-size: 2.5rem;
            width: 60px;
            height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(88, 101, 242, 0.1);
            border-radius: 12px;
            flex-shrink: 0;
        }

        .stat-info {
            flex: 1;
        }

        .stat-value {
            font-size: 1.8rem;
            font-weight: 700;
            color: #fff;
            margin-bottom: 0.25rem;
        }

        .stat-value.positive {
            color: #43b581;
        }

        .stat-value.negative {
            color: #ed4245;
        }

        .stat-label {
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.6);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .stat-change {
            font-size: 0.8rem;
            color: rgba(255, 255, 255, 0.5);
        }

        /* Chart Container */
        .chart-container {
            background: linear-gradient(135deg, rgba(30, 33, 40, 0.95) 0%, rgba(20, 23, 28, 0.95) 100%);
            border: 1px solid rgba(88, 101, 242, 0.3);
            border-radius: 12px;
            padding: 2rem;
            margin-bottom: 2rem;
            position: relative;
        }

        .chart-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #5865f2, #7289da);
        }

        .chart-container h2 {
            color: #fff;
            font-size: 1.3rem;
            margin: 0 0 1.5rem 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Section Headers */
        .section-header {
            background: linear-gradient(135deg, rgba(30, 33, 40, 0.95) 0%, rgba(20, 23, 28, 0.95) 100%);
            border: 1px solid rgba(88, 101, 242, 0.3);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            position: relative;
        }

        .section-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #5865f2, #7289da);
        }

        .section-header h2 {
            color: #fff;
            font-size: 1.3rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        /* Leaderboard */
        .leaderboard {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .leaderboard-item {
            background: linear-gradient(135deg, rgba(30, 33, 40, 0.95) 0%, rgba(20, 23, 28, 0.95) 100%);
            border: 1px solid rgba(88, 101, 242, 0.3);
            border-radius: 12px;
            padding: 1.25rem;
            display: flex;
            align-items: center;
            gap: 1rem;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .leaderboard-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .leaderboard-item.rank-1::before {
            background: linear-gradient(90deg, #ffd700, #ffed4e);
            opacity: 1;
        }

        .leaderboard-item.rank-2::before {
            background: linear-gradient(90deg, #c0c0c0, #e8e8e8);
            opacity: 1;
        }

        .leaderboard-item.rank-3::before {
            background: linear-gradient(90deg, #cd7f32, #e8a868);
            opacity: 1;
        }

        .leaderboard-item:hover {
            transform: translateX(8px);
            border-color: rgba(88, 101, 242, 0.6);
            box-shadow: 0 4px 20px rgba(88, 101, 242, 0.2);
        }

        .leaderboard-item:hover::before {
            opacity: 1;
            background: linear-gradient(90deg, #5865f2, #7289da);
        }

        .rank-badge {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: rgba(88, 101, 242, 0.2);
            color: #5865f2;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            font-size: 0.9rem;
            flex-shrink: 0;
        }

        .rank-1 .rank-badge {
            background: rgba(255, 215, 0, 0.2);
            color: #ffd700;
        }

        .rank-2 .rank-badge {
            background: rgba(192, 192, 192, 0.2);
            color: #c0c0c0;
        }

        .rank-3 .rank-badge {
            background: rgba(205, 127, 50, 0.2);
            color: #cd7f32;
        }

        .leaderboard-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            border: 2px solid rgba(88, 101, 242, 0.3);
            flex-shrink: 0;
        }

        .leaderboard-info {
            flex: 1;
        }

        .leaderboard-name {
            color: #fff;
            font-weight: 600;
            font-size: 1.1rem;
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .leaderboard-name:hover {
            color: #5865f2;
        }

        .leaderboard-stats {
            color: rgba(255, 255, 255, 0.6);
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

