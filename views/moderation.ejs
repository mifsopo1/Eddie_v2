                <option value="timeout" <%= actionType === 'timeout' ? 'selected' : '' %>>Timeouts</option>
                <option value="unmute" <%= actionType === 'unmute' ? 'selected' : '' %>>Unmutes</option>
                <option value="kick" <%= actionType === 'kick' ? 'selected' : '' %>>Kicks</option>
                <option value="warn" <%= actionType === 'warn' ? 'selected' : '' %>>Warnings</option>
            </select>
            
            <% if (actionType !== 'all') { %>
                <a href="/moderation" class="btn btn-secondary" style="margin-left: auto;">Clear Filter</a>
            <% } %>
        </div>
        
        <!-- Moderation Actions -->
        <div class="mod-actions">
            <% actions.forEach(action => { %>
                <div class="mod-action <%= action.actionType %>">
                    <div class="mod-header">
                        <span class="mod-type"><%= action.actionType.toUpperCase() %></span>
                        
                        <!-- User with Avatar -->
                        <div class="event-user">
                            <% if (action.targetUserAvatar) { %>
                                <img src="<%= action.targetUserAvatar %>" alt="Avatar" class="user-avatar-inline">
                            <% } %>
                            <a href="/user/<%= action.targetUserId %>"><%= action.targetUserName %></a>
                        </div>
                        
                        <span class="mod-time"><%= new Date(action.timestamp).toLocaleString() %></span>
                    </div>
                    
                    <div class="mod-details">
                        <% if (action.moderatorName) { %>
                            <p><strong>Moderator:</strong> <%= action.moderatorName %></p>
                        <% } %>
                        <% if (action.reason) { %>
                            <p><strong>Reason:</strong> <%= action.reason %></p>
                        <% } %>
                        <% if (action.duration) { %>
                            <p><strong>Duration:</strong> <%= Math.floor(action.duration / 60000) %> minutes</p>
                        <% } %>
                        <% if (action.evidence) { %>
                            <p><strong>Evidence:</strong> <%= action.evidence %></p>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <% if (actions.length === 0) { %>
            <div class="empty-state">
                <div class="empty-icon">🔍</div>
                <p>No moderation actions found</p>
            </div>
        <% } %>
        
        <!-- Pagination -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %><%= actionType !== 'all' ? '&type=' + actionType : '' %>" class="btn">← Previous</a>
            <% } %>
            <span>Page <%= currentPage %> of <%= totalPages %></span>
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %><%= actionType !== 'all' ? '&type=' + actionType : '' %>" class="btn">Next →</a>
            <% } %>
        </div>
    </div>
</body>
</html>