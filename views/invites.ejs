<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invite Tracking - Discord Logger</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <h2>ü§ñ <%= client.user.tag %></h2>
        </div>
        <div class="nav-links">
            <a href="/">Dashboard</a>
            <a href="/messages">Messages</a>
            <a href="/deleted">Deleted</a>
            <a href="/members">Members</a>
            <a href="/moderation">Moderation</a>
            <a href="/attachments">Attachments</a>
            <a href="/voice">Voice</a>
            <a href="/invites" class="active">Invites</a>
            <a href="/commands">Commands</a>
            <a href="/analytics">Analytics</a>
            <a href="/logout" class="logout">Logout</a>
        </div>
    </nav>
    
    <div class="container">
        <h1>üì® Invite Tracking</h1>
        
        <!-- Invite Leaderboard -->
        <div class="leaderboard-section">
            <h2>üèÜ Top Inviters</h2>
            <div class="leaderboard">
                <% if (inviteStats && inviteStats.length > 0) { %>
                    <% inviteStats.forEach((stat, index) => { %>
                        <div class="leaderboard-item rank-<%= index + 1 %>">
                            <div class="rank-badge">#<%= index + 1 %></div>
                            <div class="leaderboard-info">
                                <div class="leaderboard-name"><%= stat.inviter %></div>
                                <div class="leaderboard-stats">
                                    <span>Code: <code><%= stat._id %></code></span>
                                    <span>Total Invites: <strong><%= stat.uses %></strong></span>
                                </div>
                            </div>
                            <div class="leaderboard-bar" style="width: <%= (stat.uses / inviteStats[0].uses) * 100 %>%"></div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-muted">No invite data yet</p>
                <% } %>
            </div>
        </div>
        
        <!-- Recent Invites -->
        <div style="margin-top: 3rem;">
            <h2>üìã Recent Invites</h2>
            <div class="invites-list">
                <% if (recentInvites && recentInvites.length > 0) { %>
                    <% recentInvites.forEach(invite => { %>
                        <div class="invite-item">
                            <div class="invite-header">
                                <% if (invite.userAvatar) { %>
                                    <img src="<%= invite.userAvatar %>" alt="Avatar" class="user-avatar-inline">
                                <% } %>
                                <span class="invite-user">
                                    <a href="/user/<%= invite.userId %>"><%= invite.userName %></a>
                                </span>
                                <span class="invite-time"><%= new Date(invite.timestamp).toLocaleString() %></span>
                            </div>
                            <div class="invite-details">
                                <% if (invite.inviteData) { %>
                                    <p><strong>üì® Invited by:</strong> <%= invite.inviteData.inviter %></p>
                                    <p><strong>üé´ Code:</strong> <code><%= invite.inviteData.code %></code></p>
                                    <p><strong>üìä Total uses:</strong> <%= invite.inviteData.uses %><%= invite.inviteData.maxUses ? `/${invite.inviteData.maxUses}` : '' %></p>
                                <% } else { %>
                                    <p class="text-muted">No invite data available</p>
                                <% } %>
                                <% if (invite.accountAgeDays !== undefined) { %>
                                    <p><strong>üìÖ Account age:</strong> 
                                        <%= invite.accountAgeDays %> day<%= invite.accountAgeDays === 1 ? '' : 's' %>
                                        <% if (invite.accountAgeDays < 7) { %>
                                            <span style="color: #ff9900;">‚ö†Ô∏è New account</span>
                                        <% } %>
                                    </p>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-muted">No recent invites</p>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>