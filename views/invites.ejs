<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invite Tracking - Discord Logger</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
    <div class="nav-brand">
        <h2>ðŸ¤– <%= client.user.tag %></h2>
    </div>
    <div class="nav-links">
        <a href="/">Dashboard</a>
        <a href="/messages">Messages</a>
        <a href="/deleted">Deleted</a>
        <a href="/members">Members</a>
        <a href="/moderation">Moderation</a>
        <a href="/attachments">Attachments</a>
        <a href="/voice">Voice</a>
        <a href="/invites">Invites</a>
        <a href="/commands">Commands</a>
        <a href="/analytics">Analytics</a>
        <a href="/logout" class="logout">Logout</a>
    </div>
</nav>
    
    <div class="container">
        <h1>ðŸŽ« Invite Tracking</h1>
        
        <div class="section">
            <h2>ðŸ“Š Top Inviters</h2>
            <div class="leaderboard">
                <% inviteStats.forEach((stat, index) => { %>
                    <div class="leaderboard-item rank-<%= index + 1 %>">
                        <div class="rank-badge">#<%= index + 1 %></div>
                        <div class="leaderboard-info">
                            <div class="leaderboard-name"><%= stat.inviter %></div>
                            <div class="leaderboard-stats">
                                <span>Total Invites: <strong><%= stat.totalInvites %></strong></span>
                            </div>
                        </div>
                        <div class="leaderboard-count"><%= stat.totalInvites %> invites</div>
                    </div>
                <% }); %>
            </div>
        </div>
        
        <div class="section">
            <h2>ðŸ†• Recent Joins</h2>
            <div class="invites-list">
                <% recentInvites.forEach(invite => { %>
                    <div class="invite-item">
                        <div class="invite-header">
                            <span class="invite-user">
                                <a href="/user/<%= invite.userId %>"><%= invite.userName %></a>
                            </span>
                            <span class="invite-time">
                                <%= new Date(invite.timestamp).toLocaleString() %>
                            </span>
                        </div>
                        <div class="invite-details">
                            <% if (invite.inviteData) { %>
                                Invited by: <strong><%= invite.inviteData.inviter %></strong> 
                                (Code: <code><%= invite.inviteData.code %></code>)
                            <% } else { %>
                                No invite data
                            <% } %>
                        </div>
                        <% if (invite.accountAgeDays !== undefined) { %>
                            <div class="invite-meta">
                                Account age: <%= invite.accountAgeDays %> days
                            </div>
                        <% } %>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</body>
</html>