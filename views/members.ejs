<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members - Discord Logger</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('partials/navbar') %>
    
    <div class="container">
        <h1>👥 Member Activity</h1>
        
        <div class="filter-box">
            <label>Filter:</label>
            <select onchange="window.location='?type=' + this.value">
                <option value="all" <%= eventType === 'all' ? 'selected' : '' %>>All Events</option>
                <option value="join" <%= eventType === 'join' ? 'selected' : '' %>>Joins</option>
                <option value="leave" <%= eventType === 'leave' ? 'selected' : '' %>>Leaves</option>
                <option value="role_add" <%= eventType === 'role_add' ? 'selected' : '' %>>Roles Added</option>
                <option value="role_remove" <%= eventType === 'role_remove' ? 'selected' : '' %>>Roles Removed</option>
            </select>
        </div>
        
        <div class="member-events">
            <% if (events && events.length > 0) { %>
                <% events.forEach(event => { %>
                    <div class="member-event <%= event.eventType %>">
                        <div class="event-header">
                            <% if (event.userAvatar) { %>
                                <img src="<%= event.userAvatar %>" alt="Avatar" class="user-avatar-inline">
                            <% } %>
                            <span class="event-type"><%= event.eventType.toUpperCase().replace('_', ' ') %></span>
                            <span class="event-user">
                                <a href="/user/<%= event.userId %>"><%= event.userName %></a>
                            </span>
                            <span class="event-time"><%= new Date(event.timestamp).toLocaleString() %></span>
                        </div>
                        <div class="event-details">
                            <% if (event.inviteData && event.eventType === 'join') { %>
                                <p><strong>🎫 Invited by:</strong> <%= event.inviteData.inviter %> (code: <code><%= event.inviteData.code %></code>)</p>
                            <% } %>
                            <% if (event.accountAgeDays !== undefined) { %>
                                <p><strong>📅 Account Age:</strong> <%= event.accountAgeDays %> days old</p>
                            <% } %>
                            <% if (event.roles && event.roles.length > 0) { %>
                                <p><strong>🎭 Roles:</strong> 
                                    <% event.roles.forEach(role => { %>
                                        <span class="role-badge" style="background: <%= role.color || '#99aab5' %>"><%= role.name %></span>
                                    <% }); %>
                                </p>
                            <% } %>
                            <% if (event.timeInServer) { %>
                                <p><strong>⏱️ Time in server:</strong> <%= Math.floor(event.timeInServer / 86400000) %> days</p>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p class="text-muted">No member events found</p>
            <% } %>
        </div>
        
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="?type=<%= eventType %>&page=<%= currentPage - 1 %>" class="btn">← Previous</a>
                <% } %>
                <span>Page <%= currentPage %> of <%= totalPages %></span>
                <% if (currentPage < totalPages) { %>
                    <a href="?type=<%= eventType %>&page=<%= currentPage + 1 %>" class="btn">Next →</a>
                <% } %>
            </div>
        <% } %>
    </div>
</body>
</html>