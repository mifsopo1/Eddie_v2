<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members - Discord Logger</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <h2>ðŸ¤– <%= client.user.tag %></h2>
        </div>
        <div class="nav-links">
            <a href="/">Dashboard</a>
            <a href="/messages">Messages</a>
            <a href="/deleted">Deleted</a>
            <a href="/members">Members</a>
            <a href="/moderation">Moderation</a>
            <a href="/attachments">Attachments</a>
            <a href="/voice">Voice</a>
            <a href="/analytics">Analytics</a>
            <a href="/logout" class="logout">Logout</a>
        </div>
    </nav>
    
    <div class="container">
        <h1>ðŸ‘¥ Member Activity</h1>
        
        <h2>Recent Joins</h2>
        <div class="messages-container">
            <% if (recentJoins.length === 0) { %>
                <p>No recent joins found.</p>
            <% } else { %>
                <% recentJoins.forEach(member => { %>
                    <div class="message-item">
                        <div class="message-header">
                            <span class="message-type">JOIN</span>
                            <span class="message-user"><%= member.userName %></span>
                            <span class="message-time"><%= new Date(member.timestamp).toLocaleString() %></span>
                        </div>
                        <div class="message-content">
                            User ID: <%= member.userId %>
                            <% if (member.invitedBy) { %>
                                | Invited by: <%= member.invitedBy %>
                            <% } %>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
        
        <h2>Recent Leaves</h2>
        <div class="messages-container">
            <% if (recentLeaves.length === 0) { %>
                <p>No recent leaves found.</p>
            <% } else { %>
                <% recentLeaves.forEach(member => { %>
                    <div class="message-item">
                        <div class="message-header">
                            <span class="message-type">LEAVE</span>
                            <span class="message-user"><%= member.userName %></span>
                            <span class="message-time"><%= new Date(member.timestamp).toLocaleString() %></span>
                        </div>
                        <div class="message-content">
                            User ID: <%= member.userId %>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>
</body>
</html>
