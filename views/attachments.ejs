<script>
    function openBotModal() {
        document.getElementById('botModal').classList.add('active');
    }

    function openUserModal() {
        document.getElementById('userModal').classList.add('active');
    }

    function closeModal(modalId) {
        document.getElementById(modalId).classList.remove('active');
    }

    function copyToClipboard(elementId, button) {
        const text = document.getElementById(elementId).textContent;
        navigator.clipboard.writeText(text).then(() => {
            const originalText = button.textContent;
            button.textContent = '✓ Copied';
            button.classList.add('copied');
            
            setTimeout(() => {
                button.textContent = originalText;
                button.classList.remove('copied');
            }, 2000);
        });
    }

    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            document.querySelectorAll('.modal').forEach(modal => {
                modal.classList.remove('active');
            });
        }
    });
</script>

    <div class="container">
        <h1>📎 Attachments</h1>
        
        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">📎</div>
                <div class="stat-info">
                    <div class="stat-value"><%= (stats && stats.total) ? stats.total.toLocaleString() : '0' %></div>
                    <div class="stat-label">Total Attachments</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">💾</div>
                <div class="stat-info">
                    <div class="stat-value"><%= (stats.totalSize / 1024 / 1024).toFixed(2) %> MB</div>
                    <div class="stat-label">Total Size</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">🖼️</div>
                <div class="stat-info">
                    <div class="stat-value"><%= stats.imageCount.toLocaleString() %></div>
                    <div class="stat-label">Images</div>
                </div>
            </div>
        </div>
        
        <!-- Filter -->
        <div class="filter-box">
            <label>Filter by Type:</label>
            <select onchange="window.location='?type=' + this.value">
                <option value="all" <%= fileType === 'all' ? 'selected' : '' %>>All Files</option>
                <option value="image" <%= fileType === 'image' ? 'selected' : '' %>>Images</option>
                <option value="video" <%= fileType === 'video' ? 'selected' : '' %>>Videos</option>
                <option value="audio" <%= fileType === 'audio' ? 'selected' : '' %>>Audio</option>
                <option value="other" <%= fileType === 'other' ? 'selected' : '' %>>Other</option>
            </select>
            
            <% if (fileType !== 'all') { %>
                <a href="/attachments" class="btn btn-secondary" style="margin-left: auto;">Clear Filter</a>
            <% } %>
        </div>
        
        <!-- Attachments Grid -->
        <div class="attachments-grid">
            <% attachments.forEach(att => { %>
                <div class="attachment-card">
                    <div class="attachment-card-header">
                        <% 
                        let typeClass = 'file';
                        if (att.contentType) {
                            if (att.contentType.startsWith('image/')) typeClass = 'image';
                            else if (att.contentType.startsWith('video/')) typeClass = 'video';
                            else if (att.contentType.startsWith('audio/')) typeClass = 'audio';
                        }
                        %>
                        <span class="file-type-badge <%= typeClass %>"><%= typeClass.toUpperCase() %></span>
                    </div>
                    
                    <!-- Preview -->
                    <% if (att.contentType && att.contentType.startsWith('image/')) { %>
                        <div class="attachment-card-preview">
                            <a href="<%= att.url %>" target="_blank">
                                <img src="<%= att.proxyUrl || att.url %>" alt="<%= att.filename %>" loading="lazy">
                            </a>
                        </div>
                    <% } else { %>
                        <div class="attachment-card-placeholder">
                            <div class="placeholder-icon">
                                <% if (att.contentType && att.contentType.startsWith('video/')) { %>
                                    🎥
                                <% } else if (att.contentType && att.contentType.startsWith('audio/')) { %>
                                    🎵
                                <% } else { %>
                                    📄
                                <% } %>
                            </div>
                            <div class="placeholder-text"><%= att.filename %></div>
                        </div>
                    <% } %>
                    
                    <!-- Content -->
                    <div class="attachment-card-content">
                        <div class="attachment-filename"><%= att.filename %></div>
                        
                        <!-- User Info with Avatar -->
                        <div class="attachment-user-info">
                            <% 
                            // Try to get avatar from cache or use default
                            let userAvatar = `https://cdn.discordapp.com/embed/avatars/${parseInt(att.userId) % 5}.png`;
                            if (att.userAvatar) {
                                userAvatar = att.userAvatar;
                            }
                            %>
                            <img src="<%= userAvatar %>" alt="Avatar" class="user-avatar-tiny">
                            <a href="/user/<%= att.userId %>" class="user-link"><%= att.userName %></a>
                        </div>
                        
                        <!-- Metadata -->
                        <div class="attachment-metadata">
                            <div class="meta-item">
                                📏 Size: <%= (att.size / 1024).toFixed(2) %> KB
                            </div>
                            <div class="meta-item">
                                📅 <%= new Date(att.timestamp).toLocaleDateString() %>
                            </div>
                            <% if (att.width && att.height) { %>
                                <div class="meta-item">
                                    🖼️ <%= att.width %>x<%= att.height %>
                                </div>
                            <% } %>
                            <% if (att.channelId && att.messageId) { %>
                                <a href="/messages?channel=<%= att.channelId %>&message=<%= att.messageId %>#msg-<%= att.messageId %>" class="meta-item channel-link">
                                    📢 #<%= att.channelName %>
                                </a>
                            <% } %>
                        </div>
                        
                        <!-- Actions -->
                        <div class="attachment-actions">
                            <a href="<%= att.url %>" target="_blank" class="btn-small btn-primary">
                                View
                            </a>
                            <a href="<%= att.url %>" download class="btn-small btn-secondary">
                                Download
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <% if (attachments.length === 0) { %>
            <div class="empty-state">
                <div class="empty-icon">📎</div>
                <p>No attachments found</p>
            </div>
        <% } %>
        
        <!-- Pagination -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %><%= fileType !== 'all' ? '&type=' + fileType : '' %>" class="btn">← Previous</a>
            <% } %>
            <span>Page <%= currentPage %> of <%= totalPages %></span>
            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %><%= fileType !== 'all' ? '&type=' + fileType : '' %>" class="btn">Next →</a>
            <% } %>
        </div>
    </div>
</body>
</html>