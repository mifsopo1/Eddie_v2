<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attachments - Discord Logger</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <h2>ü§ñ <%= client.user.tag %></h2>
        </div>
        <div class="nav-links">
            <a href="/">Dashboard</a>
            <a href="/messages">Messages</a>
            <a href="/deleted">Deleted</a>
            <a href="/members">Members</a>
            <a href="/moderation">Moderation</a>
            <a href="/attachments" class="active">Attachments</a>
            <a href="/voice">Voice</a>
            <a href="/invites">Invites</a>
            <a href="/commands">Commands</a>
            <a href="/analytics">Analytics</a>
            <a href="/logout" class="logout">Logout</a>
        </div>
    </nav>
    
    <div class="container">
        <div class="page-header">
            <h1>üìé Attachments Log</h1>
            <p class="page-subtitle">Browse and manage all uploaded files</p>
        </div>
        
        <% if (stats) { %>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">üìé</div>
                    <div class="stat-info">
                        <div class="stat-value"><%= stats.totalAttachments.toLocaleString() %></div>
                        <div class="stat-label">Total Attachments</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">üíæ</div>
                    <div class="stat-info">
                        <div class="stat-value"><%= (stats.totalSize / 1024 / 1024).toFixed(2) %> MB</div>
                        <div class="stat-label">Total Size</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">üñºÔ∏è</div>
                    <div class="stat-info">
                        <div class="stat-value"><%= stats.imageCount.toLocaleString() %></div>
                        <div class="stat-label">Images</div>
                    </div>
                </div>
            </div>
        <% } %>
        
        <div class="filter-controls">
            <div class="filter-box">
                <label>Filter by type:</label>
                <select onchange="window.location='?type=' + this.value + '&page=1'">
                    <option value="all" <%= fileType === 'all' ? 'selected' : '' %>>All Files</option>
                    <option value="image" <%= fileType === 'image' ? 'selected' : '' %>>üñºÔ∏è Images</option>
                    <option value="video" <%= fileType === 'video' ? 'selected' : '' %>>üé¨ Videos</option>
                    <option value="audio" <%= fileType === 'audio' ? 'selected' : '' %>>üéµ Audio</option>
                    <option value="other" <%= fileType === 'other' ? 'selected' : '' %>>üìÑ Other</option>
                </select>
            </div>
            <p class="result-count"><%= attachments.length %> attachments found</p>
        </div>
        
        <div class="attachments-grid">
            <% attachments.forEach(att => { %>
                <div class="attachment-card">
                    <div class="attachment-card-header">
                        <span class="file-type-badge <%= att.contentType && att.contentType.startsWith('image/') ? 'image' : att.contentType && att.contentType.startsWith('video/') ? 'video' : att.contentType && att.contentType.startsWith('audio/') ? 'audio' : 'file' %>">
                            <% if (att.contentType && att.contentType.startsWith('image/')) { %>
                                üñºÔ∏è IMAGE
                            <% } else if (att.contentType && att.contentType.startsWith('video/')) { %>
                                üé¨ VIDEO
                            <% } else if (att.contentType && att.contentType.startsWith('audio/')) { %>
                                üéµ AUDIO
                            <% } else { %>
                                üìÑ FILE
                            <% } %>
                        </span>
                    </div>
                    
                    <% if (att.contentType && att.contentType.startsWith('image/')) { %>
                        <div class="attachment-card-preview">
                            <a href="<%= att.url %>" target="_blank">
                                <img src="<%= att.proxyUrl || att.url %>" 
                                     alt="<%= att.filename %>" 
                                     loading="lazy">
                            </a>
                        </div>
                    <% } else { %>
                        <div class="attachment-card-placeholder">
                            <div class="placeholder-icon">
                                <% if (att.contentType && att.contentType.startsWith('video/')) { %>
                                    üé¨
                                <% } else if (att.contentType && att.contentType.startsWith('audio/')) { %>
                                    üéµ
                                <% } else { %>
                                    üìÑ
                                <% } %>
                            </div>
                            <p class="placeholder-text"><%= att.filename %></p>
                        </div>
                    <% } %>
                    
                    <div class="attachment-card-content">
                        <div class="attachment-filename" title="<%= att.filename %>">
                            <%= att.filename.length > 30 ? att.filename.substring(0, 30) + '...' : att.filename %>
                        </div>
                        
                        <div class="attachment-user-info">
                            <img src="https://cdn.discordapp.com/avatars/<%= att.userId %>/<%= att.userAvatar || '0' %>.png" 
                                 class="user-avatar-tiny" 
                                 onerror="this.src='https://cdn.discordapp.com/embed/avatars/0.png'">
                            <a href="/user/<%= att.userId %>" class="user-link"><%= att.userName %></a>
                        </div>
                        
                        <div class="attachment-metadata">
                            <span class="meta-item">üìç #<%= att.channelName %></span>
                            <span class="meta-item">üíæ <%= (att.size / 1024).toFixed(2) %> KB</span>
                            <% if (att.width && att.height) { %>
                                <span class="meta-item">üìê <%= att.width %>√ó<%= att.height %></span>
                            <% } %>
                            <span class="meta-item">üïí <%= new Date(att.timestamp).toLocaleDateString() %></span>
                        </div>
                        
                        <div class="attachment-actions">
                            <a href="<%= att.url %>" target="_blank" class="btn-small btn-primary">
                                üì• Download
                            </a>
                            <a href="<%= att.url %>" target="_blank" class="btn-small btn-secondary">
                                üîó View
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <% if (attachments.length === 0) { %>
            <div class="empty-state">
                <div class="empty-icon">üìé</div>
                <h2>No attachments found</h2>
                <p>Try changing the filter or check back later</p>
            </div>
        <% } %>
        
        <% if (totalPages > 1) { %>
            <div class="pagination">
                <% if (currentPage > 1) { %>
                    <a href="?type=<%= fileType %>&page=<%= currentPage - 1 %>" class="btn">‚Üê Previous</a>
                <% } %>
                <span class="pagination-info">Page <%= currentPage %> of <%= totalPages %></span>
                <% if (currentPage < totalPages) { %>
                    <a href="?type=<%= fileType %>&page=<%= currentPage + 1 %>" class="btn">Next ‚Üí</a>
                <% } %>
            </div>
        <% } %>
    </div>
    
    <style>
        /* Page Header */
        .page-header {
            margin-bottom: 2rem;
        }
        
        .page-header h1 {
            margin-bottom: 0.5rem;
        }
        
        .page-subtitle {
            color: #72767d;
            font-size: 1rem;
        }
        
        /* Filter Controls */
        .filter-controls {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .result-count {
            color: #b9bbbe;
            margin: 0;
            font-size: 0.95rem;
        }
        
        /* Attachments Grid */
        .attachments-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }
        
        .attachment-card {
            background: #2c2c2c;
            border-radius: 10px;
            overflow: hidden;
            transition: all 0.3s;
            border: 2px solid transparent;
        }
        
        .attachment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.3);
            border-color: #5865f2;
        }
        
        .attachment-card-header {
            padding: 0.75rem 1rem;
            background: #232323;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .file-type-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: bold;
        }
        
        .file-type-badge.image {
            background: #5865f2;
            color: white;
        }
        
        .file-type-badge.video {
            background: #ed4245;
            color: white;
        }
        
        .file-type-badge.audio {
            background: #faa61a;
            color: white;
        }
        
        .file-type-badge.file {
            background: #43b581;
            color: white;
        }
        
        .attachment-card-preview {
            width: 100%;
            height: 220px;
            background: #1e1e1e;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }
        
        .attachment-card-preview a {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }
        
        .attachment-card-preview img {
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            transition: transform 0.3s;
        }
        
        .attachment-card-preview img:hover {
            transform: scale(1.05);
        }
        
        .attachment-card-placeholder {
            width: 100%;
            height: 220px;
            background: #1e1e1e;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 1rem;
            padding: 1rem;
        }
        
        .placeholder-icon {
            font-size: 4rem;
            opacity: 0.5;
        }
        
        .placeholder-text {
            color: #72767d;
            text-align: center;
            word-break: break-word;
            font-size: 0.9rem;
        }
        
        .attachment-card-content {
            padding: 1rem;
        }
        
        .attachment-filename {
            font-weight: bold;
            color: #fff;
            margin-bottom: 0.75rem;
            font-size: 1rem;
        }
        
        .attachment-user-info {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.75rem;
        }
        
        .user-avatar-tiny {
            width: 24px;
            height: 24px;
            border-radius: 50%;
        }
        
        .user-link {
            color: #00b0f4;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 600;
        }
        
        .user-link:hover {
            text-decoration: underline;
        }
        
        .attachment-metadata {
            display: flex;
            flex-direction: column;
            gap: 0.4rem;
            margin-bottom: 1rem;
        }
        
        .meta-item {
            color: #72767d;
            font-size: 0.85rem;
        }
        
        .attachment-actions {
            display: flex;
            gap: 0.5rem;
        }
        
        .btn-small {
            flex: 1;
            padding: 0.5rem;
            text-align: center;
            border-radius: 5px;
            text-decoration: none;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.2s;
        }
        
        .btn-small.btn-primary {
            background: #5865f2;
            color: white;
        }
        
        .btn-small.btn-primary:hover {
            background: #4752c4;
        }
        
        .btn-small.btn-secondary {
            background: #383838;
            color: white;
        }
        
        .btn-small.btn-secondary:hover {
            background: #40444b;
        }
        
        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            background: #2c2c2c;
            border-radius: 10px;
        }
        
        .empty-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        
        .empty-state h2 {
            color: #b9bbbe;
            margin-bottom: 0.5rem;
        }
        
        .empty-state p {
            color: #72767d;
        }
        
        /* Pagination */
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 1.5rem;
            padding: 2rem 0;
        }
        
        .pagination-info {
            color: #b9bbbe;
            font-weight: 600;
        }
        
        /* Responsive */
        @media (max-width: 768px) {
            .attachments-grid {
                grid-template-columns: 1fr;
            }
            
            .filter-controls {
                flex-direction: column;
                align-items: stretch;
            }
            
            .filter-box {
                width: 100%;
            }
            
            .result-count {
                text-align: center;
            }
        }
        
        @media (max-width: 480px) {
            .attachment-card-preview,
            .attachment-card-placeholder {
                height: 180px;
            }
        }
    </style>
</body>
</html>