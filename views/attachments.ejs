<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attachments - Discord Logger</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <h2>ü§ñ <%= client.user.tag %></h2>
        </div>
        <div class="nav-links">
            <a href="/">Dashboard</a>
            <a href="/messages">Messages</a>
            <a href="/deleted">Deleted</a>
            <a href="/members">Members</a>
            <a href="/moderation">Moderation</a>
            <a href="/attachments" class="active">Attachments</a>
            <a href="/voice">Voice</a>
            <a href="/invites">Invites</a>
            <a href="/commands">Commands</a>
            <a href="/analytics">Analytics</a>
            <a href="/logout" class="logout">Logout</a>
        </div>
    </nav>
    
    <div class="container">
        <h1>üìé Attachments Log</h1>
        
        <div class="filter-box">
            <label>Filter by type:</label>
            <select onchange="window.location='?type=' + this.value + '&page=1'">
                <option value="all" <%= fileType === 'all' ? 'selected' : '' %>>All Files</option>
                <option value="image" <%= fileType === 'image' ? 'selected' : '' %>>Images</option>
                <option value="video" <%= fileType === 'video' ? 'selected' : '' %>>Videos</option>
                <option value="audio" <%= fileType === 'audio' ? 'selected' : '' %>>Audio</option>
                <option value="other" <%= fileType === 'other' ? 'selected' : '' %>>Other</option>
            </select>
        </div>
        
        <% if (stats) { %>
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">üìé</div>
                    <div class="stat-info">
                        <div class="stat-value"><%= stats.totalAttachments.toLocaleString() %></div>
                        <div class="stat-label">Total Attachments</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">üíæ</div>
                    <div class="stat-info">
                        <div class="stat-value"><%= (stats.totalSize / 1024 / 1024).toFixed(2) %> MB</div>
                        <div class="stat-label">Total Size</div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon">üñºÔ∏è</div>
                    <div class="stat-info">
                        <div class="stat-value"><%= stats.imageCount.toLocaleString() %></div>
                        <div class="stat-label">Images</div>
                    </div>
                </div>
            </div>
        <% } %>
        
        <p class="result-count">Showing <%= attachments.length %> attachments</p>
        
        <div class="attachments-list">
            <% attachments.forEach(att => { %>
                <div class="attachment-item">
                    <div class="attachment-header">
                        <span class="file-icon">
                            <% if (att.contentType && att.contentType.startsWith('image/')) { %>
                                üñºÔ∏è
                            <% } else if (att.contentType && att.contentType.startsWith('video/')) { %>
                                üé¨
                            <% } else if (att.contentType && att.contentType.startsWith('audio/')) { %>
                                üéµ
                            <% } else { %>
                                üìÑ
                            <% } %>
                        </span>
                        <strong><%= att.filename %></strong>
                    </div>
                    
                    <div class="attachment-details">
                        <div class="attachment-info">
                            <p><strong>User:</strong> <a href="/user/<%= att.userId %>"><%= att.userName %></a></p>
                            <p><strong>Channel:</strong> #<%= att.channelName %></p>
                            <p><strong>Uploaded:</strong> <%= new Date(att.timestamp).toLocaleString() %></p>
                            <p><strong>Size:</strong> <%= (att.size / 1024).toFixed(2) %> KB</p>
                            <p><strong>Type:</strong> <%= att.contentType || 'Unknown' %></p>
                            <% if (att.width && att.height) { %>
                                <p><strong>Dimensions:</strong> <%= att.width %> x <%= att.height %></p>
                            <% } %>
                            <p><strong>URL:</strong> <a href="<%= att.url %>" target="_blank">View Original</a></p>
                        </div>
                        
                        <% if (att.contentType && att.contentType.startsWith('image/')) { %>
                            <div class="attachment-preview">
                                <a href="<%= att.url %>" target="_blank">
                                    <img src="<%= att.proxyUrl || att.url %>" alt="<%= att.filename %>" loading="lazy">
                                </a>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <% if (attachments.length === 0) { %>
            <div class="empty-state">
                <h2>No attachments found</h2>
                <p>Try changing the filter or check back later</p>
            </div>
        <% } %>
        
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?type=<%= fileType %>&page=<%= currentPage - 1 %>" class="btn">‚Üê Previous</a>
            <% } %>
            <span>Page <%= currentPage %> of <%= totalPages %></span>
            <% if (currentPage < totalPages) { %>
                <a href="?type=<%= fileType %>&page=<%= currentPage + 1 %>" class="btn">Next ‚Üí</a>
            <% } %>
        </div>
    </div>
</body>
</html>