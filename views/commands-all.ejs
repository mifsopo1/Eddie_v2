<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Commands - Discord Logger</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <h2>ü§ñ <%= client.user.tag %></h2>
        </div>
        <div class="nav-links">
            <a href="/">Dashboard</a>
            <a href="/messages">Messages</a>
            <a href="/deleted">Deleted</a>
            <a href="/members">Members</a>
            <a href="/moderation">Moderation</a>
            <a href="/attachments">Attachments</a>
            <a href="/voice">Voice</a>
            <a href="/invites">Invites</a>
            <a href="/commands" class="active">Commands</a>
            <a href="/analytics">Analytics</a>
            <a href="/logout" class="logout">Logout</a>
        </div>
    </nav>
    
    <div class="container">
        <div class="page-header">
            <div>
                <h1>‚öôÔ∏è All Commands Manager</h1>
                <p class="page-subtitle">Enable/disable all bot commands including built-in ones</p>
            </div>
            <div style="display: flex; gap: 1rem;">
                <a href="/commands" class="btn btn-secondary">‚Üê Back to Custom Commands</a>
            </div>
        </div>
        
        <!-- Fun Commands -->
        <% if (commandsByCategory.fun && commandsByCategory.fun.length > 0) { %>
        <div class="command-section">
            <div class="section-header">
                <h2>üéÆ Fun Commands (<%= commandsByCategory.fun.length %>)</h2>
            </div>
            <div class="commands-list">
                <% commandsByCategory.fun.forEach(command => { %>
                    <div class="command-row <%= command.enabled ? '' : 'disabled' %>" data-category="fun">
                        <div class="command-main">
                            <div class="command-info">
                                <div class="command-name-row">
                                    <h3><%= command.name %></h3>
                                    <span class="command-badge fun">fun</span>
                                    <span class="badge <%= command.type === 'builtin' ? 'badge-builtin' : 'badge-custom' %>">
                                        <%= command.type === 'builtin' ? 'Built-in' : 'Custom' %>
                                    </span>
                                    <span class="command-status <%= command.enabled ? 'enabled' : 'disabled' %>">
                                        <%= command.enabled ? 'Enabled' : 'Disabled' %>
                                    </span>
                                </div>
                                <p class="command-desc"><%= command.description || 'No description' %></p>
                            </div>
                            <div class="command-actions-row">
                                <% if (command.type === 'custom') { %>
                                    <button class="btn-icon" onclick="window.location.href='/commands'" title="Edit in Custom Commands">
                                        ‚úèÔ∏è
                                    </button>
                                <% } %>
                                <button class="btn-icon toggle" 
                                        onclick="toggleCommand('<%= command.type %>', '<%= command.type === 'custom' ? command._id : command.name %>')" 
                                        title="Toggle">
                                    <%= command.enabled ? 'üëÅÔ∏è' : 'üëÅÔ∏è‚Äçüó®Ô∏è' %>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>
        
        <!-- Info Commands -->
        <% if (commandsByCategory.info && commandsByCategory.info.length > 0) { %>
        <div class="command-section">
            <div class="section-header">
                <h2>‚ÑπÔ∏è Info Commands (<%= commandsByCategory.info.length %>)</h2>
            </div>
            <div class="commands-list">
                <% commandsByCategory.info.forEach(command => { %>
                    <div class="command-row <%= command.enabled ? '' : 'disabled' %>" data-category="info">
                        <div class="command-main">
                            <div class="command-info">
                                <div class="command-name-row">
                                    <h3><%= command.name %></h3>
                                    <span class="command-badge info">info</span>
                                    <span class="badge <%= command.type === 'builtin' ? 'badge-builtin' : 'badge-custom' %>">
                                        <%= command.type === 'builtin' ? 'Built-in' : 'Custom' %>
                                    </span>
                                    <span class="command-status <%= command.enabled ? 'enabled' : 'disabled' %>">
                                        <%= command.enabled ? 'Enabled' : 'Disabled' %>
                                    </span>
                                </div>
                                <p class="command-desc"><%= command.description || 'No description' %></p>
                            </div>
                            <div class="command-actions-row">
                                <% if (command.type === 'custom') { %>
                                    <button class="btn-icon" onclick="window.location.href='/commands'" title="Edit in Custom Commands">
                                        ‚úèÔ∏è
                                    </button>
                                <% } %>
                                <button class="btn-icon toggle" 
                                        onclick="toggleCommand('<%= command.type %>', '<%= command.type === 'custom' ? command._id : command.name %>')" 
                                        title="Toggle">
                                    <%= command.enabled ? 'üëÅÔ∏è' : 'üëÅÔ∏è‚Äçüó®Ô∏è' %>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>
        
        <!-- Utility Commands -->
        <% if (commandsByCategory.utility && commandsByCategory.utility.length > 0) { %>
        <div class="command-section">
            <div class="section-header">
                <h2>üîß Utility Commands (<%= commandsByCategory.utility.length %>)</h2>
            </div>
            <div class="commands-list">
                <% commandsByCategory.utility.forEach(command => { %>
                    <div class="command-row <%= command.enabled ? '' : 'disabled' %>" data-category="utility">
                        <div class="command-main">
                            <div class="command-info">
                                <div class="command-name-row">
                                    <h3><%= command.name %></h3>
                                    <span class="command-badge utility">utility</span>
                                    <span class="badge <%= command.type === 'builtin' ? 'badge-builtin' : 'badge-custom' %>">
                                        <%= command.type === 'builtin' ? 'Built-in' : 'Custom' %>
                                    </span>
                                    <span class="command-status <%= command.enabled ? 'enabled' : 'disabled' %>">
                                        <%= command.enabled ? 'Enabled' : 'Disabled' %>
                                    </span>
                                </div>
                                <p class="command-desc"><%= command.description || 'No description' %></p>
                            </div>
                            <div class="command-actions-row">
                                <% if (command.type === 'custom') { %>
                                    <button class="btn-icon" onclick="window.location.href='/commands'" title="Edit in Custom Commands">
                                        ‚úèÔ∏è
                                    </button>
                                <% } %>
                                <button class="btn-icon toggle" 
                                        onclick="toggleCommand('<%= command.type %>', '<%= command.type === 'custom' ? command._id : command.name %>')" 
                                        title="Toggle">
                                    <%= command.enabled ? 'üëÅÔ∏è' : 'üëÅÔ∏è‚Äçüó®Ô∏è' %>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <% } %>
        
        <!-- Moderation Commands -->
        <% if (commandsByCategory.moderation && commandsByCategory.moderation.length > 0) { %>
        <div class="command-section">
            <div class="section-header">
                <h2>üî® Moderation Commands (<%= commandsByCategory.moderation.length %>)</h2>
            </div>
            <div class="commands-list">
                <% commandsByCategory.moderation.forEach(command => { %>
                    <div class="command-row <%= command.enabled ? '' : 'disabled' %>" data-category="moderation">
                        <div class="command-main">
                            <div class="command-info">
                                <div class="command-name-row">
                                    <h3><%= command.name %></h3>
                                    <span class="command-badge moderation">moderation</span>
                                    <span class="badge <%= command.type === 'builtin' ? 'badge-builtin' : 'badge-custom' %>">
                                        <%= command.type === 'builtin' ? 'Built-in' : 'Custom' %>
                                    </span>
                                    <span class="command-status <%= command.enabled ? 'enabled' : 'disabled' %>">
                                        <%= command.enabled ? 'Enabled' : 'Disabled' %>
                                    </span>
                                </div>
                                <p class="command-desc"><%= command.description || 'No description' %></p>
                            </div>
                            <div class="command-actions-row">
                                <% if (command.type === 'custom') { %>
                                    <button class="btn-icon" onclick="window.location.href='/commands'" title="Edit in Custom Commands">
                                        ‚úèÔ∏è
                                    </button>
                                <% } %>
