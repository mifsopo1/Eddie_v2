async function updateServerSetting(path, value) {
    try {
        // Parse the path (e.g., "antiSpam.enabled" -> ["antiSpam", "enabled"])
        const keys = path.split('.');
        
        // Build nested object
        const settings = {};
        let current = settings;
        
        for (let i = 0; i < keys.length - 1; i++) {
            current[keys[i]] = {};
            current = current[keys[i]];
        }
        current[keys[keys.length - 1]] = value;
        
        const response = await fetch('/commands/server-settings', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ settings })
        });

        const data = await response.json();
        if (data.success) {
            showAlert(`Server setting updated!`, 'success');
        } else {
            showAlert('Failed to update setting', 'error');
        }
    } catch (error) {
        console.error('Error:', error);
        showAlert('Error updating setting', 'error');
    }
}

// Debounced version for text inputs
let settingUpdateTimeout;
function debouncedServerSetting(path, value) {
    clearTimeout(settingUpdateTimeout);
    settingUpdateTimeout = setTimeout(() => {
        updateServerSetting(path, value);
    }, 1000); // Wait 1 second after user stops typing
